{
    "name": "osecs",
    "version": "0.0.21",
    "description": "Oli's Simple ECS",
    "types": "./dist/esm/src/index.d.ts",
    "type": "module",
    "scripts": {
        "build-esm": "tsc --project tsconfig.esm.json",
        "build-cjs": "tsc --project tsconfig.cjs.json",
        "watch": "watch 'npm run build-esm'",
        "test": "jest --env=node --colors --coverage test",
        "lint": "eslint src --fix --ext .ts",
        "prepublishOnly": "./scripts/prepublish.sh"
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@github.com/olafurkarl/osecs.git"
    },
    "author": "Olafur Karl Stefansson",
    "license": "MIT",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/esm/src/index.d.ts",
                "default": "./dist/esm/src/index.js"
            },
            "require": {
                "types": "./dist/cjs/src/index.d.ts",
                "default": "./dist/cjs/src/index.js"
            }
        }
    },
    "dependencies": {
        "eslint": "^8.24.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "prettier": "^2.7.1",
        "typescript": "^5.3.3",
        "uuid": "^9.0.0",
        "watch": "^0.13.0"
    },
    "devDependencies": {
        "@types/jest": "^29.0.3",
        "@types/node": "^18.7.19",
        "@types/uuid": "^8.3.4",
        "@typescript-eslint/eslint-plugin": "^5.38.0",
        "jest": "^29.0.3",
        "ts-jest": "^29.0.2"
    },
    "bugs": {
        "url": "https://github.com/olafurkarl/osecs/issues"
    },
    "homepage": "https://github.com/olafurkarl/osecs#readme",
    "directories": {
        "test": "tests"
    }
}
