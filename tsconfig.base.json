{
  "compilerOptions": {
    "lib": ["ES2020", "DOM"],
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": false,
    "noEmit": false,
    "composite": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "declaration": true,
  },
  "include": ["./src", "./tests"],
  "exclude": [
    "node_modules",
    "dist"
  ],
}
